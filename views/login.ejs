<%- include('includes/head.ejs') %>
<h2 class="text-center my-sm-4">Log In</h2>
<br>
<h4 id="loginstatus" class="text-center my-sm-3"></h4>
<h4 id="logins"></h4>
     <!-- Form Start -->
    <div class="col-sm-3"></div>
    <div class="col-sm-6 mx-auto">
    <form action="/login" method="POST">
        <div class="form-row">
            <div class="form-group col-md-12">
            <label for="username"><i class="fa fa-envelope" aria-hidden="true"></i> Username</label>
            <input type="name" class="form-control" id="username" name="username" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
            <label for="password"><i class="fa fa-key" aria-hidden="true"></i> Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            </div>
        </div>
        <div class="col-sm-12 text-center"><button type="submit" class="btn-teal py-sm-2 w-50 px-sm-1 py-sm-1 btn"><b><i class="fa fa-arrow-right" aria-hidden="true"></i> Submit</b></button>
        </div>            
        </form>
        <br>
        <hr>
        <h4 class="text-center">Don't have an id?</h4>
        <h4 class="text-center"><a class="text-center" href="/sign-up">Sign Up</a></h4>
    </div>
    <div class="col-sm-3"></div>
    
    <% if (messages) {%>
    <script>
          document.getElementById("loginstatus").innerHTML += "<%= messages %>";
    </script>
    <% } %>
    <!-- Form End -->
<%- include('includes/foot.ejs') %>